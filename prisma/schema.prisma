datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String       @unique
  senha       String
  mesas       Mesa[]       @relation("UsuarioMesas") // Mesas que o usuário é dono
  personagens Personagem[]
  Mensagem    Mensagem[]
  mesaAtual   Mesa[]       @relation("MesaUsuarios") // Mesas onde o usuário está online

  @@map("usuarios")
}

model Mesa {
  id          Int          @id @default(autoincrement())
  nome        String
  sistema     String
  descricao   String
  vagas       Boolean  @default(false)// Saber se existe vagas na mesa
  mestre_mesa Boolean  @default(false)// Saber se o mestre esta logado na mesa
  dono        Usuario      @relation("UsuarioMesas", fields: [userId], references: [id]) // Dono da mesa
  userId      Int
  mensagens   Mensagem[]
  personagens Personagem[]
  usuarios    Usuario[]    @relation("MesaUsuarios") // Usuários online na mesa
  imagem      Imagem       @relation(fields: [imagemId], references: [id]) // Referência à imagem
  imagemId    Int          @unique

  @@map("mesas")
}

model Imagem {
  id   Int    @id @default(autoincrement())
  url  String @db.Text // Altera o tipo para Text no banco de dados
  Mesa Mesa[]

  @@map("imagens")
}

model Mensagem {
  id       Int     @id @default(autoincrement())
  conteudo String  @db.Text
  autor    Usuario @relation(fields: [userId], references: [id])
  userId   Int
  mesa     Mesa    @relation(fields: [mesaId], references: [id])
  mesaId   Int

  @@map("mensagens")
}

model Personagem {
  id         Int     @id @default(autoincrement())
  nickname   String  @default("Sem Personagem")
  vidaMaxima Int     @default(0) // Exemplo de valor padrão
  vidaAtual  Int     @default(0) // Exemplo de valor padrão
  usuario    Usuario @relation(fields: [userId], references: [id])
  userId     Int
  mesa       Mesa    @relation(fields: [mesaId], references: [id])
  mesaId     Int

  @@unique([userId, mesaId]) // Garante que o usuário tenha apenas um personagem por mesa
  @@map("personagens")
}
